[user]
    name = Carlos Salazar
[credential]
    helper = osxkeychain

[core]
    excludesfile = ~/.gitignore # Ignore .gitconfig files valid everywhere

[includeIf "gitdir:~/dotfiles/"] # include for all .git projects under ~/dotfiles/
    path = ~/.gitconfig.personal

[includeIf "gitdir:~/Development/Personal/"] # include for all .git projects under ~/Development/Personal/
    path = ~/.gitconfig.personal

[includeIf "gitdir:~/Development/Slalom/"] # include for all .git projects under ~/Development/Slalom/
    path = ~/.gitconfig.slalom

[includeIf "gitdir:~/Development/Fastgrid/"] # include for all .git projects under ~/Development/Fastgrid/
    path = ~/.gitconfig.fastgrid

# override for all .git projects under ~/Development/
[includeIf "gitdir:~/"] # include for all .git projects under ~/Development/
    path = ~/.gitconfig.local

